// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Status {
  WAITING
  IN_PRODUCTION
  DONE
}

model Category {
  id      String    @id @default(cuid())
  name    String    @unique
  icon    String
  Product Product[]

  @@map("categories")
}

model Product {
  id          String @id @default(cuid())
  name        String
  description String
  imagePath   String
  prince      Int

  Ingredients Ingredient[]
  Category    Category     @relation(fields: [categoryId], references: [id])
  categoryId  String
  request     Request[]

  @@map("products")
}

model Ingredient {
  id   String @id @default(cuid())
  name String
  icon String

  product Product[]
}

model Order {
  id        String  @id @default(cuid())
  table     String
  status    Status  @default(WAITING)
  request   Request @relation(fields: [requestId], references: [id])
  requestId String

  @@map("order")
}

model Request {
  id       String    @id @default(cuid())
  products Product[]
  quantity Int[]
  Order    Order[]

  @@map("requests")
}
